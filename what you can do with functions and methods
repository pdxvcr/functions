#HOW TO USE A FUNCTION
def letter_count(word, letter):
    j=0
    for i in word:
        if i == letter:
            j = j + 1
    print(j)
letter_count('pumpkin', 'k')

#HOW TO SEARCH PATTERNS IN STRINGS
if 'seed' in 'banana':
    print('yes')
else :
    print('no')

#HOW TO USE METHODS WITH STRINGS
stuff='hey'
print(type(stuff))
print(dir(stuff))

#HOW TO USE METHODS
word='headquarters'
new_word = word.capitalize()
print(new_word)
